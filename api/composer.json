{
    "name": "homestyle-furniture/api",
    "description": "Backend API for HomeStyle Furniture website",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "doctrine/dbal": "^3.7",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "php-di/php-di": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}
